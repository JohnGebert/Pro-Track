@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = "ChangePassword";
}

<h3>@ViewData["Title"]</h3>

<!-- Display status message if present -->
@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-key"></i> Change Your Password
                </h5>
            </div>
            <div class="card-body">
                <!-- Password Requirements Information -->
                <div class="alert alert-info mb-4" role="alert">
                    <h6 class="alert-heading">
                        <i class="fas fa-info-circle"></i> Password Requirements
                    </h6>
                    <p class="mb-0">Your new password must meet the following requirements:</p>
                    <ul class="mb-0 mt-2">
                        <li>At least <strong>6 characters</strong> long</li>
                        <li>Contains at least one <strong>uppercase letter</strong> (A-Z)</li>
                        <li>Contains at least one <strong>lowercase letter</strong> (a-z)</li>
                        <li>Contains at least one <strong>digit</strong> (0-9)</li>
                    </ul>
                </div>

                <!-- Change Password Form -->
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <!-- Current Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" 
                               aria-required="true" placeholder="Current password" />
                        <label asp-for="Input.OldPassword" class="form-label">
                            <i class="fas fa-lock"></i> Current Password
                        </label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    
                    <!-- New Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" 
                               aria-required="true" placeholder="New password" />
                        <label asp-for="Input.NewPassword" class="form-label">
                            <i class="fas fa-key"></i> New Password
                        </label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    
                    <!-- Confirm New Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" 
                               aria-required="true" placeholder="Confirm new password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">
                            <i class="fas fa-check-circle"></i> Confirm New Password
                        </label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Update Password
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Additional Security Tips -->
        <div class="card mt-3">
            <div class="card-header bg-warning">
                <h6 class="mb-0">
                    <i class="fas fa-shield-alt"></i> Security Tips
                </h6>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>Use a unique password that you don't use for other websites</li>
                    <li>Avoid using personal information like names or birthdays</li>
                    <li>Consider using a password manager to generate and store strong passwords</li>
                    <li>Change your password regularly for better security</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto-hide success messages after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-success');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}


@{
    ViewData["Title"] = "Time Logger";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-clock"></i> Time Logger</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Log New Time Entry
                </a>
            </div>

            <!-- Time Logging Card -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-stopwatch"></i> Log Billable Time
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="text-primary">Time Tracking Features</h6>
                            <p class="text-muted">This page will provide comprehensive time tracking capabilities including:</p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i> Start and stop time tracking for projects</li>
                                <li><i class="fas fa-check text-success me-2"></i> Manual time entry with start and end times</li>
                                <li><i class="fas fa-check text-success me-2"></i> Automatic duration calculation</li>
                                <li><i class="fas fa-check text-success me-2"></i> Add detailed descriptions for time entries</li>
                                <li><i class="fas fa-check text-success me-2"></i> Track billable vs non-billable hours</li>
                                <li><i class="fas fa-check text-success me-2"></i> View time entries by project and client</li>
                                <li><i class="fas fa-check text-success me-2"></i> Export time reports</li>
                                <li><i class="fas fa-check text-success me-2"></i> Track productivity and efficiency metrics</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="fas fa-clock fa-5x text-muted mb-3"></i>
                                <h6 class="text-muted">Time Logger Module</h6>
                                <p class="small text-muted">Coming Soon</p>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <!-- Time Tracking Demo -->
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-info">Current Time Tracking Session</h6>
                            <div class="card border-info">
                                <div class="card-body text-center">
                                    <div class="display-4 text-info mb-3">00:00:00</div>
                                    <p class="text-muted">No active time tracking session</p>
                                    <button class="btn btn-success" disabled>
                                        <i class="fas fa-play"></i> Start Timer
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-success">Recent Time Entries</h6>
                            <div class="card border-success">
                                <div class="card-body">
                                    <div class="text-center text-muted">
                                        <i class="fas fa-history fa-2x mb-2"></i>
                                        <p class="mb-0">No recent time entries</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> The Time Logger module is currently under development. 
                        You'll be able to track your billable hours and manage time entries here once the implementation is complete.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

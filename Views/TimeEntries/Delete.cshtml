@model ProTrack.Models.TimeEntry

@{
    ViewData["Title"] = "Delete Time Entry";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Are you sure you want to delete this time entry? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Project</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Project.Title)</dd>

                        <dt class="col-sm-3">Client</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Project.Client.Name)</dd>

                        <dt class="col-sm-3">Start Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>

                        <dt class="col-sm-3">End Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>

                        <dt class="col-sm-3">Duration</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DurationInHours) hours</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete Time Entry
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


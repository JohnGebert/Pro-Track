@model ProTrack.Models.TimeEntry

@{
    ViewData["Title"] = "Log Time Entry";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-stopwatch me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="timeEntryForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ProjectId" class="form-label">Project *</label>
                                <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.ProjectId">
                                    <option value="">-- Select Project --</option>
                                </select>
                                <span asp-validation-for="ProjectId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartTime" class="form-label">Start Time *</label>
                                <input asp-for="StartTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndTime" class="form-label">End Time *</label>
                                <input asp-for="EndTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description *</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="What did you work on?"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="card mb-3 border-primary-subtle">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-magic me-2 text-primary"></i>AI Description Assistant
                                    </h5>
                                    <span class="badge bg-light text-dark">Beta</span>
                                </div>
                                <p class="text-muted small mb-3">
                                    Provide a quick prompt and let the assistant craft a polished, billable description.
                                </p>
                                <div class="mb-3">
                                    <label for="aiPromptInput" class="form-label">What should we mention?</label>
                                    <textarea id="aiPromptInput" class="form-control" rows="2" placeholder="e.g., Draft description for 2 hours spent reviewing code and preparing feedback"></textarea>
                                </div>
                                <div class="d-flex gap-2 mb-3">
                                    <button type="button" class="btn btn-outline-primary" id="generateDescriptionBtn">
                                        <i class="fas fa-robot me-1"></i>Generate Description
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" id="appendDescriptionBtn" disabled>
                                        <i class="fas fa-plus me-1"></i>Append to Description
                                    </button>
                                    <button type="button" class="btn btn-outline-success" id="replaceDescriptionBtn" disabled>
                                        <i class="fas fa-check me-1"></i>Use Description
                                    </button>
                                </div>
                                <div id="aiStatus" class="text-muted small"></div>
                                <div id="aiSuggestion" class="alert alert-primary d-none mt-3" role="alert">
                                    <strong>Suggested Description</strong>
                                    <p class="mb-0" id="aiSuggestionBody"></p>
                                </div>
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="IsBilled" />
                            <label class="form-check-label" asp-for="IsBilled">
                                Mark as Billed
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-save me-1"></i>Log Time Entry
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('timeEntryForm');
            if (!form) {
                return;
            }

            const promptInput = document.getElementById('aiPromptInput');
            const generateBtn = document.getElementById('generateDescriptionBtn');
            const appendBtn = document.getElementById('appendDescriptionBtn');
            const replaceBtn = document.getElementById('replaceDescriptionBtn');
            const statusEl = document.getElementById('aiStatus');
            const suggestionContainer = document.getElementById('aiSuggestion');
            const suggestionBody = document.getElementById('aiSuggestionBody');
            const descriptionField = document.getElementById('Description');

            const projectSelect = document.getElementById('ProjectId');
            const startInput = document.getElementById('StartTime');
            const endInput = document.getElementById('EndTime');

            let latestSuggestion = '';

            function setStatus(message, isError = false) {
                statusEl.textContent = message || '';
                statusEl.classList.toggle('text-danger', Boolean(isError));
            }

            function toggleButtons(isGenerating) {
                generateBtn.disabled = isGenerating;
                appendBtn.disabled = isGenerating || !latestSuggestion;
                replaceBtn.disabled = isGenerating || !latestSuggestion;
            }

            function calculateDurationHours(startValue, endValue) {
                if (!startValue || !endValue) {
                    return null;
                }

                const start = new Date(startValue);
                const end = new Date(endValue);
                const diffMs = end - start;

                if (Number.isNaN(diffMs) || diffMs <= 0) {
                    return null;
                }

                const hours = diffMs / (1000 * 60 * 60);
                return Math.round(hours * 100) / 100;
            }

            async function generateDescription() {
                const prompt = promptInput.value.trim();
                if (!prompt) {
                    setStatus('Enter a short prompt so we know what to generate.', true);
                    promptInput.focus();
                    return;
                }

                const tokenField = form.querySelector('input[name="__RequestVerificationToken"]');
                const requestToken = tokenField ? tokenField.value : '';

                const durationHours = calculateDurationHours(startInput.value, endInput.value);
                const projectId = projectSelect && projectSelect.value ? parseInt(projectSelect.value, 10) : null;
                const projectName = projectSelect && projectSelect.value
                    ? projectSelect.options[projectSelect.selectedIndex].text
                    : null;

                toggleButtons(true);
                setStatus('Generating descriptionâ€¦');
                suggestionContainer.classList.add('d-none');
                suggestionBody.textContent = '';
                latestSuggestion = '';

                try {
                    const response = await fetch('@Url.Action("GenerateDescription", "TimeEntries")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': requestToken
                        },
                        body: JSON.stringify({
                            prompt,
                            projectId,
                            durationHours,
                            additionalContext: projectName ? `Project selection: ${projectName}` : null
                        })
                    });

                    const data = await response.json();

                    if (data.success && data.description) {
                        latestSuggestion = data.description.trim();
                        suggestionBody.textContent = latestSuggestion;
                        suggestionContainer.classList.remove('d-none');
                        setStatus('Suggestion ready. Use the buttons above to apply it.');
                    } else {
                        const message = data.message || 'Unable to generate a description right now.';
                        setStatus(message, true);
                    }
                } catch (error) {
                    console.error('AI description error:', error);
                    setStatus('Something went wrong while contacting the AI assistant.', true);
                } finally {
                    toggleButtons(false);
                }
            }

            generateBtn.addEventListener('click', generateDescription);

            appendBtn.addEventListener('click', function () {
                if (!latestSuggestion) {
                    return;
                }

                const existing = descriptionField.value.trim();
                descriptionField.value = existing
                    ? `${existing}\n\n${latestSuggestion}`
                    : latestSuggestion;
                setStatus('Suggestion appended to the description field.');
            });

            replaceBtn.addEventListener('click', function () {
                if (!latestSuggestion) {
                    return;
                }
                descriptionField.value = latestSuggestion;
                setStatus('Description replaced with the AI suggestion.');
            });
        });
    </script>
}


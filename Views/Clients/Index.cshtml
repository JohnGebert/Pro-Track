@model IEnumerable<ProTrack.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users"></i> Clients</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Client
                </a>
            </div>

            <!-- Success/Info Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle"></i> @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Clients Table -->
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                <i class="fas fa-list"></i> Client List
                                <span class="badge bg-secondary ms-2">@Model.Count()</span>
                            </h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleView('table')">
                                    <i class="fas fa-table"></i> Table
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleView('cards')">
                                    <i class="fas fa-th-large"></i> Cards
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <!-- Table View -->
                        <div id="tableView" class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ContactEmail)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </th>
                                        <th>
                                            Projects
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var client in Model)
                                    {
                                        <tr class="@(client.IsActive ? "" : "table-secondary")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        @client.Name.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <div>
                                                        <strong>@Html.DisplayFor(modelItem => client.Name)</strong>
                                                        @if (!client.IsActive)
                                                        {
                                                            <span class="badge bg-warning ms-2">Inactive</span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="mailto:@client.ContactEmail" class="text-decoration-none">
                                                    <i class="fas fa-envelope"></i> @Html.DisplayFor(modelItem => client.ContactEmail)
                                                </a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(client.PhoneNumber))
                                                {
                                                    <a href="tel:@client.PhoneNumber" class="text-decoration-none">
                                                        <i class="fas fa-phone"></i> @Html.DisplayFor(modelItem => client.PhoneNumber)
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @client.Projects?.Count() projects
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @client.CreatedDate.ToString("MMM dd, yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                @if (client.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@client.Id" 
                                                       class="btn btn-outline-info btn-sm" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@client.Id" 
                                                       class="btn btn-outline-primary btn-sm" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (client.IsActive)
                                                    {
                                                        <a asp-action="Deactivate" asp-route-id="@client.Id" 
                                                           class="btn btn-outline-warning btn-sm" title="Deactivate"
                                                           onclick="return confirm('Are you sure you want to deactivate this client?')">
                                                            <i class="fas fa-pause"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Reactivate" asp-route-id="@client.Id" 
                                                           class="btn btn-outline-success btn-sm" title="Reactivate">
                                                            <i class="fas fa-play"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@client.Id" 
                                                       class="btn btn-outline-danger btn-sm" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Card View -->
                        <div id="cardView" class="d-none p-3">
                            <div class="row">
                                @foreach (var client in Model)
                                {
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card h-100 @(client.IsActive ? "" : "border-warning")">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        @client.Name.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <h6 class="mb-0">@client.Name</h6>
                                                </div>
                                                @if (client.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Inactive</span>
                                                }
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text">
                                                    <i class="fas fa-envelope"></i> 
                                                    <a href="mailto:@client.ContactEmail" class="text-decoration-none">
                                                        @client.ContactEmail
                                                    </a>
                                                </p>
                                                @if (!string.IsNullOrEmpty(client.PhoneNumber))
                                                {
                                                    <p class="card-text">
                                                        <i class="fas fa-phone"></i> 
                                                        <a href="tel:@client.PhoneNumber" class="text-decoration-none">
                                                            @client.PhoneNumber
                                                        </a>
                                                    </p>
                                                }
                                                <p class="card-text">
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar"></i> 
                                                        Created: @client.CreatedDate.ToString("MMM dd, yyyy")
                                                    </small>
                                                </p>
                                                <p class="card-text">
                                                    <span class="badge bg-info">
                                                        @client.Projects?.Count() projects
                                                    </span>
                                                </p>
                                            </div>
                                            <div class="card-footer bg-transparent">
                                                <div class="btn-group w-100" role="group">
                                                    <a asp-action="Details" asp-route-id="@client.Id" 
                                                       class="btn btn-outline-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@client.Id" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (client.IsActive)
                                                    {
                                                        <a asp-action="Deactivate" asp-route-id="@client.Id" 
                                                           class="btn btn-outline-warning btn-sm"
                                                           onclick="return confirm('Are you sure you want to deactivate this client?')">
                                                            <i class="fas fa-pause"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Reactivate" asp-route-id="@client.Id" 
                                                           class="btn btn-outline-success btn-sm">
                                                            <i class="fas fa-play"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@client.Id" 
                                                       class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No clients found</h5>
                            <p class="text-muted">Get started by adding your first client.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add New Client
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleView(view) {
            if (view === 'table') {
                document.getElementById('tableView').classList.remove('d-none');
                document.getElementById('cardView').classList.add('d-none');
            } else {
                document.getElementById('tableView').classList.add('d-none');
                document.getElementById('cardView').classList.remove('d-none');
            }
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>

    <style>
        .avatar-sm {
            width: 32px;
            height: 32px;
            font-size: 14px;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
        }

        .btn-group .btn {
            border-radius: 0;
        }

        .btn-group .btn:first-child {
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
        }

        .btn-group .btn:last-child {
            border-top-right-radius: 0.375rem;
            border-bottom-right-radius: 0.375rem;
        }

        @@media (max-width: 768px) {
            .btn-group {
                flex-direction: column;
            }
            
            .btn-group .btn {
                border-radius: 0.375rem !important;
                margin-bottom: 2px;
            }
        }
    </style>
}

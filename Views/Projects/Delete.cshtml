@model ProTrack.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Are you sure you want to delete this project? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Project Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3">Client</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Client.Name)</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Status == ProjectStatus.Active)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else if (Model.Status == ProjectStatus.Completed)
                            {
                                <span class="badge bg-info">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">On Hold</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Hourly Rate</dt>
                        <dd class="col-sm-9">$@Html.DisplayFor(model => model.HourlyRate)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete Project
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


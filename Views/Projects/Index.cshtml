@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-project-diagram"></i> Projects</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Project
                </a>
            </div>

            <!-- Projects Management Card -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i> Manage Projects & Search
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="text-primary">Project Management Features</h6>
                            <p class="text-muted">This page will provide comprehensive project management capabilities including:</p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i> Create and manage multiple projects</li>
                                <li><i class="fas fa-check text-success me-2"></i> Assign projects to clients</li>
                                <li><i class="fas fa-check text-success me-2"></i> Track project status (Active, Completed, Invoiced)</li>
                                <li><i class="fas fa-check text-success me-2"></i> Set hourly rates for each project</li>
                                <li><i class="fas fa-check text-success me-2"></i> Add project descriptions and notes</li>
                                <li><i class="fas fa-check text-success me-2"></i> View project timelines and deadlines</li>
                                <li><i class="fas fa-check text-success me-2"></i> Track time entries per project</li>
                                <li><i class="fas fa-check text-success me-2"></i> Generate project-based reports</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="fas fa-project-diagram fa-5x text-muted mb-3"></i>
                                <h6 class="text-muted">Projects Module</h6>
                                <p class="small text-muted">Coming Soon</p>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> The Projects module is currently under development. 
                        You'll be able to create, edit, and manage your projects here once the implementation is complete.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

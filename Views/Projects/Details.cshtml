@model ProTrack.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-project-diagram me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Project Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3">Client</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Client.Name)</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Status == ProjectStatus.Active)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else if (Model.Status == ProjectStatus.Completed)
                            {
                                <span class="badge bg-info">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">On Hold</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Hourly Rate</dt>
                        <dd class="col-sm-9">$@Html.DisplayFor(model => model.HourlyRate)</dd>

                        <dt class="col-sm-3">Start Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDate)</dd>

                        <dt class="col-sm-3">End Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndDate)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


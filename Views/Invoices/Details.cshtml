@model ProTrack.Models.Invoice

@{
    ViewData["Title"] = "Invoice Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Invoice Number</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.InvoiceNumber)</dd>

                        <dt class="col-sm-3">Client</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Client.Name)</dd>

                        <dt class="col-sm-3">Invoice Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.InvoiceDate)</dd>

                        <dt class="col-sm-3">Due Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DueDate)</dd>

                        <dt class="col-sm-3">Total Amount</dt>
                        <dd class="col-sm-9">$@Html.DisplayFor(model => model.TotalAmount)</dd>

                        <dt class="col-sm-3">Payment Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsPaid)
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Unpaid</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Payment Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentDate)</dd>

                        <dt class="col-sm-3">Notes</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@{
    ViewData["Title"] = "Invoices";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-file-invoice"></i> Invoices</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Invoice
                </a>
            </div>

            <!-- Invoice Management Card -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice-dollar"></i> Generate & Track Invoices
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="text-primary">Invoice Management Features</h6>
                            <p class="text-muted">This page will provide comprehensive invoice management capabilities including:</p>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i> Create professional invoices from time entries</li>
                                <li><i class="fas fa-check text-success me-2"></i> Generate invoices for specific projects or clients</li>
                                <li><i class="fas fa-check text-success me-2"></i> Include detailed line items and descriptions</li>
                                <li><i class="fas fa-check text-success me-2"></i> Set payment terms and due dates</li>
                                <li><i class="fas fa-check text-success me-2"></i> Track invoice status (Draft, Sent, Paid, Overdue)</li>
                                <li><i class="fas fa-check text-success me-2"></i> Send invoices via email</li>
                                <li><i class="fas fa-check text-success me-2"></i> Generate PDF invoices</li>
                                <li><i class="fas fa-check text-success me-2"></i> Track payment history and receipts</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="fas fa-file-invoice fa-5x text-muted mb-3"></i>
                                <h6 class="text-muted">Invoices Module</h6>
                                <p class="small text-muted">Coming Soon</p>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <!-- Invoice Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <i class="fas fa-file-invoice fa-2x text-primary mb-2"></i>
                                    <h6 class="card-title">Total Invoices</h6>
                                    <h4 class="text-primary">0</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                    <h6 class="card-title">Paid Invoices</h6>
                                    <h4 class="text-success">0</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                    <h6 class="card-title">Pending Invoices</h6>
                                    <h4 class="text-warning">0</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-danger">
                                <div class="card-body text-center">
                                    <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                                    <h6 class="card-title">Overdue Invoices</h6>
                                    <h4 class="text-danger">0</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Recent Invoices Table Placeholder -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Recent Invoices</h6>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">No invoices created yet</h6>
                                <p class="text-muted">Start by creating your first invoice from time entries or projects.</p>
                                <button class="btn btn-primary" disabled>
                                    <i class="fas fa-plus"></i> Create First Invoice
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> The Invoices module is currently under development. 
                        You'll be able to create, manage, and track your invoices here once the implementation is complete.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
